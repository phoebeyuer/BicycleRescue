.help_list {
    display: flex;
}
.help_list:nth-child(n+1) {
    margin-top: 30rpx;
}
.item {
    position: relative;
    flex: 1;
}
.item:after {
    display: block;
    content: '';
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    background-color: #000;
    opacity: 0.55;
    border-radius: 10rpx;
}
.item:first-child {
    margin-left: 30rpx;
    margin-right: 15rpx;
}
.item:last-child {
    margin-left: 15rpx;
    margin-right: 30rpx;
}
.item image {
    display: block;
    width: 100%;
    border-radius: 10rpx;
}
.title_box {
    position: absolute;
    z-index: 5;
    top: 50%;
    color: #fff;
    transform: translateY(-50%);
    text-align: center;
    width: 100%;
    font-size: 40rpx;
}
.title_box .en {
    font-size: 28rpx;
    font-family: "Times New Roman";
    opacity: 0.55;
    margin-top: 5rpx;
}
.item-hover {
    background-color: #000;
    opacity: 0.9;
    border-radius: 10rpx;
}

/* 底部导航栏样式 */
.bottom-pic{
  position: fixed;
  z-index: 50;
  width: 100%;
  height: 130rpx;
  bottom: 0;
  left: 0;
  right: 0;
}

.bottom-pic image {
  width: 100%;
  height: 130rpx;
}

/* 底部导航栏按钮样式 */
.bottom-nav {
  position: fixed; 
  z-index: 99;
  width: 100%;
  height: 76rpx;
  bottom: 12rpx; 
  left: 0;
  right: 0;
}

/* 要改font-family和font-size */
.bottom-nav .index-nav{
  float: left;
  margin-left: 100rpx;
  margin-right: 99rpx;
  width: 52rpx;
  height: 76rpx;
  color: #999;
  font-size: 20rpx;
  text-align: center; 
}

.bottom-nav image {
  width: 42rpx;
  height: 48rpx;
}