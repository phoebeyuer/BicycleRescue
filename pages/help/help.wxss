.help_list {
    display: flex;
}
.help_list:nth-child(n+1) {
    margin-top: 30rpx;
}
.item {
    position: relative;
    flex: 1;
}
.item:after {
    display: block;
    content: '';
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    background-color: #000;
    opacity: 0.55;
    border-radius: 10rpx;
}
.item:first-child {
    margin-left: 30rpx;
    margin-right: 15rpx;
}
.item:last-child {
    margin-left: 15rpx;
    margin-right: 30rpx;
}
.item image {
    display: block;
    width: 100%;
    border-radius: 10rpx;
}
.title_box {
    position: absolute;
    z-index: 5;
    top: 50%;
    color: #fff;
    transform: translateY(-50%);
    text-align: center;
    width: 100%;
    font-size: 40rpx;
}
.title_box .en {
    font-size: 28rpx;
    font-family: "Times New Roman";
    opacity: 0.55;
    margin-top: 5rpx;
}
.item-hover {
    background-color: #000;
    opacity: 0.9;
    border-radius: 10rpx;
}